{
  "name": "viral-ngs-assembly-finisher",
  "title": "viral-ngs-assembly-finisher",
  "summary": "Postprocess Trinity assembly",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "categories": [],
  "inputSpec": [
    {
      "name": "trinity_assembly",
      "class": "file",
      "patterns": ["*.Trinity.fasta"]
    },
    {
      "name": "reads",
      "class": "file",
      "patterns": ["*.fastq.gz"]
    },
    {
      "name": "reads2",
      "class": "file",
      "patterns": ["*.fastq.gz"]
    },
    {
      "name": "reference_genome",
      "class": "file",
      "patterns": ["*.fasta"]
    },
    {
      "name": "min_length",
      "help": "Fail if the assembly is below this length",
      "class": "int",
      "default": 15000
    },
    {
      "name": "min_unambig",
      "help": "Fail if the assembly has less than this proportion of non-N bases",
      "class": "float",
      "default": 0.95
    },
    {
      "name": "replace_length",
      "help": "length of assembly ends to be replaced with reference",
      "class": "int",
      "default": 55
    },
    {
      "name": "resources",
      "class": "file",
      "patterns": ["viral-ngs-*.resources.tar.gz"]
    }
  ],
  "outputSpec": [
    {
      "name": "vfat_assembly",
      "class": "file",
      "patterns": ["*.fasta"]
    },
    {
      "name": "refmosaic_assembly",
      "class": "file",
      "patterns": ["*.fasta"]
    },
    {
      "name": "contigsMap",
      "class": "file",
      "patterns": ["*.pdf"]
    }
  ],
  "runSpec": {
    "interpreter": "bash",
    "file": "src/code.sh",
    "systemRequirements": {
      "main": {
        "instanceType": "mem2_ssd1_x2"
      }
    },
    "execDepends": [
      {"name": "default-jre-headless"},
      {"name": "python-numpy"},
      {"name": "python-scipy"},
      {"name": "r-base"},
      {"name": "libipc-system-simple-perl"},
      {"name": "samtools"}
    ]
  },
  "access": {
    "network": [
      "*"
    ]
  },
  "authorizedUsers": []
}
